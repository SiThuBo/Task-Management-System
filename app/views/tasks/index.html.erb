
<h1>Tasks</h1>

<div id="tasks">
  <table class="table table-striped table-bordered table-hover">
    <thead class="thead-light">
      <th>Title:</th>
      <th>Description:</th>
      <th>Status:</th>
      <th>Priority:</th>
      <th>Due date:</th>
      <th></th>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
        <%= render task %>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to "New task", new_task_path, class: "btn btn-secondary" %>
