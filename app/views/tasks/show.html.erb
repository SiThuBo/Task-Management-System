
<%# <%= render @task %>

<div class="card">
  <div class="card-header">
    <%= @task.title %>
  </div>
  <div class="card-body">
    <h5 class="card-title"> <%= @task.description %>  </h5>
    <p class="card-text">  <%= @task.status %> </p>
    <%= link_to "Edit this task", edit_task_path(@task), class: "btn btn-secondary" %> |
  <%= link_to "Back to tasks", tasks_path, class: "btn btn-dark" %>
  </div>
</div>
<br/>
