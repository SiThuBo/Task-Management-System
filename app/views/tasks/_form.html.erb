<%= form_with(model: task) do |form| %>
  <% if task.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
        <% task.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :status, style: "display: block" %>
    <%= form.select :status, Task.statuses.keys.map { |status| [status.humanize, status] }, {}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :priority, style: "display: block" %>
    <%= form.text_field :priority, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :due_date, style: "display: block" %>
    <%= form.datetime_field :due_date, class: "form-control" %>
  </div>

  <div class="form-group mt-2">
    <%= form.submit class: "btn btn-secondary"  %>
  </div>
<% end %>
